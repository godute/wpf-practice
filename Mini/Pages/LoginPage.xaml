<Page x:Class="Mini.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mini.Pages"
      mc:Ignorable="d" 
      
      Title="LoginPage">

    <Grid Width="270" Height="500" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="20" Grid.Row="0" Text="Let's meet your workmate!" />
        <TextBox Name="idText" Grid.Row="1" Margin="20, 5, 20, 5" Text="E-mail"  />
        <PasswordBox Name="pwText" Grid.Row="2" Margin="20, 5, 20, 5" Password="Password" />
        <TextBlock Name="errorText" Grid.Row="3" Margin="20, 5, 20, 5" Foreground="Red" Text="Please check your Account"
                   Visibility="Collapsed"/>
        <Button Name="loginBtn" Grid.Row="4" Margin="20, 5, 20, 5" Click="loginBtn_Click">Sign In</Button>
    </Grid>

</Page>
