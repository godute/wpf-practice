<Page x:Class="WPF_Frame.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Frame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <Button Name="btn1" Width="80" Content="b1" Click="Btn1_Click"/>
            <Button Name="btn2" Width="80" Content="b2" Click="Btn2_Click"/>
            <Button Name="btn3" Width="80" Content="b3" Click="Btn3_Click"/>

        </StackPanel>
        <Frame Name="frames" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        
    </StackPanel>
</Page>
